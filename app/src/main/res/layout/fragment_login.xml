<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="konox.actividad3.LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:id="@+id/editText_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="69dp"
        android:id="@+id/editText_pwd"
        android:layout_below="@+id/editText_email"
        android:layout_alignLeft="@+id/editText_email"
        android:layout_alignStart="@+id/editText_email" />

    <Button
        android:text="INICIAR SESION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_iniciarsesion"
        android:layout_alignBaseline="@+id/button_registrarse"
        android:layout_alignBottom="@+id/button_registrarse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:text="ContraseÃ±a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView_PWD"
        android:textSize="18sp"
        android:layout_below="@+id/editText_email"
        android:layout_toLeftOf="@+id/button_iniciarsesion"
        android:layout_toStartOf="@+id/button_iniciarsesion"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <Button
        android:text="REGISTRARSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_registrarse"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView_PWD"
        android:layout_toStartOf="@+id/textView_PWD" />

    <TextView
        android:text="Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:id="@+id/textView_USR"
        android:textSize="18sp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_above="@+id/editText_pwd"
        android:layout_alignRight="@+id/textView_PWD"
        android:layout_alignEnd="@+id/textView_PWD" />
</RelativeLayout>
